{
  "name": "sombia-react-mobile",
  "productName": "Sombia",
  "private": true,
  "version": "1.0.0-alpha.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "vite-cordova": "tsc && vite build --mode cordova",
    "copy-to-cordova": "cp -r dist/* cordova/www && cp -r dist/assets/* cordova/www/assets && rm -rf dist",
    "clear-cordova": "rm -rf cordova/www/*",
    "prepare-cordova": "cd cordova && npm install",
    "cordova-run": "cd cordova && cordova run browser",
    "cordova-build": "cd cordova && cordova build browser && cordova build android",
    "cordova": "npm run vite-cordova && npm run clear-cordova && npm run copy-to-cordova && npm run cordova-run",
    "build-cordova": "npm run vite-cordova && npm run clear-cordova && npm run prepare-cordova && npm run copy-to-cordova && npm run cordova-build"
  },
  "dependencies": {
    "@octokit/rest": "^21.0.0",
    "marked": "^13.0.0",
    "marked-emoji": "^1.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1",
    "sass": "^1.77.6"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "typescript": "^5.2.2",
    "vite": "^5.3.1"
  }
}
